<div class="container" style="margin-top: -120px;">
  <div class="row">
    <div class="col-md-12" style="margin-top: 200px;">
      <div class="wrapper-show">
        <div class="wrapper-edit-link">
          <%= link_to edit_cocktail_path(@cocktail) do  %>
            <i class="fas fa-pencil-alt"></i>
          <% end %>
        </div>
        <div class="wrapper-header">
          <%= simple_form_for(@cocktail, defaults: { input_html: { class: "form-text" }, label_html: { class: "form-text" } }) do |f| %>
          <div class="row">
            <div class="col-4">
              <h1><%= @cocktail.name %></h1>
                    <%= f.input :name %>
            </div>
            <div class="col-8">
              <% if @cocktail.photo.attached? %>
                <div class="wrapper-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, width: 400, height: 300, crop: :fill %>')">
                </div>
                  <%= f.input :photo, as: :file %>
                  <%= f.submit "Submit changes", class: "button" %>
              <% else %>
                <div class="wrapper-img" style="filter: grayscale(100%);background-color: black">
                </div>
                   <%= f.input :photo, as: :file %>
                   <%= f.submit "Submit changes", class: "button" %>
                   <% end %>
              <% end %>
            </div>
          </div>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
