<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1547059470-3b0c7cd958a4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1651&q=80);">
  <h1>Awsome Cocktails</h1>
</div>

<div class="contain">
  <div class="flex">
    <% @cocktails.each do |cocktail| %>

      <div class="col-xs-12 col-sm-6 col-lg-4">





        <% if cocktail.photo.attached? %>

          <div class="cards" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, width: 400, height: 300, crop: :fill %>')">

            <div class="card-category"><%= cocktail.name %></div>
            <div class="card-description">
              <p><%= cocktail.ingredients.name %></p>
            </div>
          </div>

          <%= link_to cocktail_path(cocktail) do %>

            <div class="card-link"></div>

          <% end %>




        <% else %>

          <div class="cards" style="filter: grayscale(100%);background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path("jkh7kyurtohmrj3dmjgl", width: 400, height: 300, crop: :fill) %>')">
            <div class="card-category"><%= cocktail.name %></div>


          </div>

          <%= link_to cocktail_path(cocktail) do %>

            <div class="card-link"></div>

          <% end %>



        <% end %>






      </div>
    <% end %>
  </div>
</div>

